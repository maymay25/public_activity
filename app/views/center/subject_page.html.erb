<div class="center_wrap">

  <%= render partial:'basic_info' %>

  <div class="container">

    <div class="layout_wrap">

      <div class="ihome_forum_group ihome_section clearfix">
          <h1 class="ihome_title">
            <span class="cut_line">|</span><%= user_mark @u,'共' %>订阅了<%= @followed_subjects_sum %>个专题
          </h1>
          <div class="clearfix u-f-wrap">
              <% @followed_subjects.each do |f| %>
              <a href="/subject/<%= f.subject_identify %>" target="_blank" class="u-f-item unsign">
              	<span><%= f.subject_title %></span>
              </a>
              <% end %>
          </div>    
      </div>

      <div class="pagination_wrap">
        <%= paginate @followed_subjects,inner_window:3,outer_window:1 %>
      </div>

    </div>



  </div>
</div>

<% content_for :bodyScript do %>
<script src="<%= static_url "/assets/js/view/page.center.js" %>"></script>
<% end %>


