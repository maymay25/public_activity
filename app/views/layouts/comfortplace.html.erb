<!DOCTYPE HTML>
<html>
<head>
  <title><%= @page_title || "安慰小屋-随心社区" %></title>
  <meta charset="utf-8">
  <meta content="<%= @page_description %>" name="description">
  <meta content="<%= @page_keywords %>" name="keywords">
  <% if true %>
  <meta name="baidu-site-verification" content="wojry88A5T" />
  <% end %>

  <link href="<%= static_url "/assets/css/thecomfortplace.css" %>" media="all" rel="stylesheet" type="text/css">
  <link href="<%= static_url "/assets/css/font-awesome.min.css" %>" rel="stylesheet" media="all" type="text/css">
  <script src="<%= static_url "/assets/js/lib/require.js" %>"></script>
  <script type="text/javascript">
		requirejs.config({
		    baseUrl: '<%= static_url "/assets/js/lib","noVersion" %>',
		    paths:{
		        plugin:'../plugin',
		        templates:'../templates'
		    },
		    shim: {
		        underscore: {
		            exports: '_'
		        }
		    },
		    urlArgs:'<%= APP_VERSION %>'
		});
  </script>

  <% content_for :bodyScript do %>
  <script src="<%= static_url "/assets/js/comfortplace.js" %>"></script>
  <% end %>
  <link rel='icon' type='image/png' href='/favicon.ico'>
  
  <%= csrf_meta_tags %>

</head>
<body id="<%= "ie6" if ie6? %>" class="<%= yield(:bodyClass) if content_for? :bodyClass %>">

<div id="LOADING"></div>
<style type="text/css">#LOADING{width: 10%;}</style>

<%= yield %>

<style type="text/css">#LOADING{width: 70%;}</style>
<div class="bodyScript">
  <%= yield(:bodyScript) if content_for? :bodyScript %>
</div>

<style type="text/css">#LOADING{width: 90%;}</style>
<%= render partial:'footer' %>

<!--[if lt IE 7]>
<script src="<%= static_url "/assets/js/other/DD_belatedPNG_0.0.8a-min.js" %>"></script>
<script src="<%= static_url "/assets/js/other/ie6Js.js" %>"></script>
<![endif]-->
<style type="text/css">#LOADING{width: 100%;display:none;}</style>
</body>
</html>

